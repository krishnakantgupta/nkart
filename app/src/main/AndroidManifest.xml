<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kk.nkart">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_icon_nkat"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon_nkat"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.view.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.view.authentication.login.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.view.authentication.registeration.RegistrationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.view.cart.CartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.category.CategoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.plp.ProductListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.pdp.ProductDetailsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.view.wishlist.WishListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.dashboard.DashBoardActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.view.address.AddressListingActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>