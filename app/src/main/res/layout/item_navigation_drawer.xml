<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_56dp"
    android:gravity="center_vertical"
    android:background="@drawable/selector_navigation_row_item"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dimen_16dp">

    <View
        android:id="@+id/checkView"
        android:layout_width="@dimen/dimen_8dp"
        android:layout_height="@dimen/dimen_8dp"
        android:background="@drawable/bachground_navigation_item_selection"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dimen_32dp"
        android:layout_height="@dimen/dimen_32dp"
        android:layout_marginEnd="@dimen/dimen_16sp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/info_icon_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:textColor="@color/black_3"
        android:textSize="@dimen/dimen_16sp" />
</androidx.appcompat.widget.LinearLayoutCompat>