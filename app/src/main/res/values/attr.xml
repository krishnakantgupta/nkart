<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomNavigationItem">
        <attr name="title" format="string" />
        <attr name="icon" format="reference" />
        <attr name="selectedColor" format="reference" />
        <attr name="normalColor" format="reference" />
        <attr name="isSelected" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomTextBox">
        <attr name="label" format="string" />
        <attr name="hint" format="string" />
        <attr name="max_length" format="integer" />
        <attr name="label_color" format="color" />
        <attr name="label_visibility" format="boolean" />
        <attr name="isPassword" format="boolean" />
        <attr name="error_visibility" format="boolean" />
        <attr name="error_text" format="string"/>
        <attr name="label_text_size" format="dimension" />
        <attr name="android:imeOptions"/>
        <attr name="android:text"/>
        <attr name="android:inputType"/>
    </declare-styleable>

</resources>